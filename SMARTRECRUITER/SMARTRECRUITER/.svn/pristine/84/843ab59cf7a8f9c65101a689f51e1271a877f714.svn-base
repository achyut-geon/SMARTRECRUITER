@{
    ViewBag.Title = "";
    Layout = "~/Views/Shared/_Layout.cshtml";
        // Layout = null;
}

<script src="~/plugins/jQuery/jQuery-2.1.4.min.js"></script>
<script src="~/js/Masters/Topic.js"></script>



<script>

    var api_url = '@ViewBag.api_url'


    $(document).ready(function () {
        ObjTopic.init();
    });
</script>
<section class="content-header">
    <h1>Topic
            <small>Masters</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i>Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-xs-12">
            <div id="ViewBranch">

                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title"></h3>
                        <div class="btn-group pull-left">
                            <button id="btnAddNew" class="btn btn-primary" onclick="ObjTopic.Show(2)">
                                Add New <i class="fa fa-plus"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <div id="Grid" class="box-body">
                    </div>
                </div>

            </div>
            <div id="AddBranch" style="display: none;">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title">Add Topic</h3>
                        <div class="btn-group pull-right">
                            <button id="btnBack" class="btn btn-primary" onclick="ObjTopic.init()">
                                <i class="fa fa-arrow-up"></i>
                            </button>
                        </div>
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <div class="form-horizontal">
                        <div class="box-body">
                           
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Topic Code<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="hidden" id="TopicId" value="0" />
                                    <input type="text" class="form-control" id="txtTopicCode" onchange="ObjTopic.Validate()" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Topic Name<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtTopicName" onchange="ObjTopic.Validate()" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">Sort Order<span style="color: red">*</span></label>
                                <div class="col-sm-6">
                                    <input type="text" class="form-control" id="txtTopicSortOrder" onchange="ObjTopic.Validate()" />
                                </div>
                            </div>

                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <div class="btn-group pull-right">
                                <button id="btnSubmit" type="submit" class="btn btn-primary" onclick="ObjTopic.Submit()">Submit</button>

                                &nbsp;&nbsp
                           <button type="reset" id="btnClear" class="btn btn-primary" onclick="ObjTopic.Clear()">Clear</button>

                            </div>


                        </div>
                        <!-- /.box-footer -->
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /.row -->


</section>
